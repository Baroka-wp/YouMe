<div class="row">
    <div class="col-12 top-bar">
      <i class="fa fa-times fa-2x text-munted float-right" id="close-conversation"></i>
      <%= link_to image_tag(@profile.images.first, width:"40px", height:"40px", class:"float-left profile-thumb rounded-circle mr-3"),"#" %>
      <p class="text-muted mt-2"> You matched with <%= @profile.first_name %> on <%= @matche.created_at.strftime("%d/%m/%Y") %></p>
    </div>
  </div>
  <div class="row">
    <div class="col-12 text-center">
      <div id="initiate-conversation">
        <p class="mt-3">You matched with <span><%= @profile.first_name %></span> <%= time_ago_in_words @matche.created_at %> ago</p>
        <%= link_to image_tag(@profile.images.first, width:"200px", height:"200px", class:"rounded-circle mb-5 mt-3"),"#" %>
        <p>Envoie lui un message et fait le/la sourire :)</p>
      </div>
      <div id="conversation_messages"></div>

    </div>
  </div>
  <div class="row ">
    <div class="col-12 mt-5 bottom-bar" %>
      <%= render partial: "browse/new_conversation" %>
    </div>
  </div>
